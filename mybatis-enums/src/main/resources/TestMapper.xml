<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kirinpatel.mybatis_enums.TestMapper">

  <resultMap id="TestResultMap" type="com.kirinpatel.mybatis_enums.Test">
    <id property="id" column="id"/>
    <result property="vegetable" column="enum" javaType="com.kirinpatel.mybatis_enums.Vegetable" />
  </resultMap>

  <select id="getTestsByVegetable" parameterType="com.kirinpatel.mybatis_enums.Vegetable" resultMap="TestResultMap">
    SELECT id, enum
    FROM test_schema.test_table
    WHERE enum = #{vegetable}::test_schema.test_enum
  </select>

</mapper>
